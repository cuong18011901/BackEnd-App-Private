{
    "name": "app-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build:gateway": "nest build",
        "build:auth": "nest build authenticator",
        "build:user": "nest build user",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "start:gateway": "node dist/apps/app-backend/main.js",
        "start:main": "node dist/apps/app-backend/main.js",
        "start:auth": "node dist/apps/authenticator/main.js",
        "start:user": "node dist/apps/user/main.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/app-backend/test/jest-e2e.json",
        "dev:auth": "nest start authenticator --watch",
        "dev:user": "nest start user --watch",
        "dev:main": "nest start app-backed --watch",
        "dev:gateway": "nest start app-backed --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\""
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/microservices": "^7.6.15",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/swagger": "^4.8.0",
        "@prisma/client": "^2.22.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "compression": "^1.7.4",
        "dotenv": "^9.0.2",
        "express-rate-limit": "^5.2.6",
        "helmet": "^4.6.0",
        "libphonenumber-js": "^1.9.17",
        "morgan": "^1.10.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.13",
        "request-context": "^2.0.0",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.3",
        "@types/jest": "26.0.10",
        "@types/morgan": "^1.9.2",
        "@types/node": "^13.9.1",
        "@types/passport-jwt": "^3.0.5",
        "@types/redis": "^2.8.28",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "jest": "26.4.2",
        "prettier": "^1.19.1",
        "prisma": "^2.22.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "9.0.0",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "@app/repositories/(.*)": "<rootDir>/libs/repositories/$1",
            "@app/repositories": "<rootDir>/libs/repositories",
            "@app/config/(.*)": "<rootDir>/libs/config/src/$1",
            "@app/config": "<rootDir>/libs/config/src",
            "@app/otp/(.*)": "<rootDir>/libs/otp/src/$1",
            "@app/otp": "<rootDir>/libs/otp/src",
            "@app/common/(.*)": "<rootDir>/libs/common/src/$1",
            "@app/common": "<rootDir>/libs/common/src",
            "@app/utils/(.*)": "<rootDir>/libs/utils/src/$1",
            "@app/utils": "<rootDir>/libs/utils/src",
            "@app/caching/(.*)": "<rootDir>/libs/caching/src/$1",
            "@app/caching": "<rootDir>/libs/caching/src"
        }
    }
}
